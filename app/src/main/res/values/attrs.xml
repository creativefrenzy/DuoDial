<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlikerProgressBar">
        <attr name="textSize" format="dimension|reference" />
        <attr name="loadingColor" format="color|reference" />
        <attr name="stopColor" format="color|reference" />
        <attr name="radius" format="dimension|reference" />
        <attr name="borderWidth" format="dimension|reference" />
    </declare-styleable>
    <declare-styleable name="ColorTextView">
        <attr name="startColor" format="color|reference"/>
        <attr name="centerColor" format="color|reference"/>
        <attr name="endColor" format="color|reference"/>
        <attr name="is_horizontal" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircularStatusView">
        <attr name="portion_width" format="dimension" />
        <attr name="portion_color" format="color" />
        <attr name="portion_spacing" format="dimension" />
        <attr name="portions_count" format="integer" />
    </declare-styleable>



</resources>