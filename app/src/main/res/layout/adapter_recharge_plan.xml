<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_stroke_plan_dailog"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="20dp"
                android:src="@drawable/diamond_for_plan" />

            <TextView
                android:id="@+id/coint_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="4dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_regular"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="20sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/plan_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lato_medium"
            android:paddingTop="4dp"
            android:text="--"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/lato_medium"
            android:paddingTop="4dp"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/SP16" />

        <TextView
            android:id="@+id/tv_vipPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:layout_marginStart="25dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/rounded_corner_vipplan"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text="Free 0 Days VIP"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>