<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_dialog"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_white_update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:src="@drawable/iv_version_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="48dp"
            android:text="Upload phote and video
             to get approved"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_top"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/dot1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_dot_version"
            app:layout_constraintBottom_toBottomOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv1" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Your profile in under review"
            android:textColor="#222222"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/dot1"
            app:layout_constraintTop_toBottomOf="@+id/iv_top" />

        <View
            android:id="@+id/dot2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/shape_dot_version"
            app:layout_constraintBottom_toBottomOf="@+id/tv2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv2" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Add Some Video"
            android:textColor="#222222"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/dot2"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv2">

            <com.privatepe.host.utils.MagicProgressBar
                android:id="@+id/magicBar"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:loadingColor="#6301f1"
                app:radius="80dp"
                app:stopColor="#f51eb2"
                app:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="232dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/version_button_bg"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_update" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>