<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivPosition"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:gravity="center"
        android:fontFamily="@font/lato_bold"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/fake_user_icon"
        app:civ_border_color="@color/gray_lightest"
        app:civ_border_width="0.5dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:text="USER1"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_12sdp"
            android:background="@drawable/rounded_primary_rectangle"
            android:layout_below="@+id/personal_level"
            android:layout_marginStart="@dimen/_5sdp">


            <TextView
                android:id="@+id/tvCharmLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Lv .1"
                android:textColor="@color/white"
                android:textSize="9dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/lato_bold"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:src="@drawable/beans" />

</LinearLayout>