<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_minimum"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="30dp"
    android:padding="10dp"
    android:background="@drawable/round_toast"
    >
    <ImageView
        android:id="@+id/custom_toast_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_baseline_error"
        app:tint="@color/toast_text_color" />

    <TextView
        android:id="@+id/custom_toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18dp"
        android:textColor="@color/toast_text_color"
        android:text="Minimum $5 required to withdraw." />
</LinearLayout>