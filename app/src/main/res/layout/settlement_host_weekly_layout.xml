<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_user"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/host_user_image"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_profile" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/host_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/lato_bold"
                            android:text="Ritu sharma"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/host_id"
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_margin="0dp"
                                android:backgroundTint="@color/colorPrimary"
                                android:fontFamily="@font/lato_semibold"
                                android:gravity="center"
                                android:text="ID:376702558"
                                android:textColor="@color/grey"
                                android:textSize="12sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:drawablePadding="6dp"
                        android:fontFamily="@font/lato_semibold"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="3dp"
                        android:src="@drawable/ic_forward" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/lato_bold"
                        android:paddingStart="15dp"
                        android:text="Dollar:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_payout_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/lato_semibold"
                        android:paddingStart="5dp"
                        android:text="$0"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_user"
                android:paddingLeft="@dimen/DP5"
                android:paddingRight="@dimen/DP5"
                android:paddingBottom="@dimen/DP10"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingStart="1dp"
                    android:paddingBottom="@dimen/DP1">

                    <TextView
                        android:id="@+id/tv_user_total_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/lato_semibold"
                        android:text="1060"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_diamond"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_user_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_user_total_input"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/lato_medium"
                        android:includeFontPadding="false"
                        android:text="Total"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingStart="1dp"
                    android:paddingBottom="@dimen/DP1">

                    <TextView
                        android:id="@+id/tv_video_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/lato_semibold"
                        android:text="1000"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_diamond"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_Video_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_video_input"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/lato_medium"
                        android:includeFontPadding="false"
                        android:text="Video income"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/DP1">

                    <TextView
                        android:id="@+id/tv_gift_income_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/lato_semibold"
                        android:text="60"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_diamond"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_gift_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_gift_income_input"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/lato_medium"
                        android:includeFontPadding="false"
                        android:text="Gift income"
                        android:textColor="@color/grey"
                        android:textSize="11sp" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>