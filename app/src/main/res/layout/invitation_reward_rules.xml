<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:background="#FFFFFF"
            app:cardCornerRadius="@dimen/_15sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/header_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/invitation_dialog_1"
                    android:textColor="#302939"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/header_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_1"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/lato_bold"
                    android:paddingTop="10dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/invitation_dialog_header_2"
                    android:textColor="@color/colorNavigationFont"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/header_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_below="@id/header_2"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/invitation_dialog_info"
                    android:textColor="@color/textGrey"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/recview_cardholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_3"
                    android:elevation="0dp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/recview_headers"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/grey200">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Top-up"
                                android:textColor="#302939"
                                android:textSize="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/view6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/view6"
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                app:layout_constraintEnd_toStartOf="@+id/appCompatTextView4" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView4"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Ratio"
                                android:textColor="#302939"
                                android:textSize="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recView_invitation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recview_headers"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/header_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recview_cardholder"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/lato_regular"
                    android:paddingTop="20dp"
                    android:visibility="gone"
                    android:textColor="#302939"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/header_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_4"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingTop="5dp"
                    android:textColor="#787878"
                    android:textSize="14sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>