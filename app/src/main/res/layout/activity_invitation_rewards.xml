<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.InvitationRewardsActivity">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            tools:context=".activity.InvitationRewardsActivity">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_700"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <!-- HEADER -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/invitation_bg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_225sdp"
                            android:background="@drawable/invitation_bg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.001"
                            tools:layout_editor_absoluteX="1dp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/back_btn"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_32sdp"
                            android:src="@drawable/backarrow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/info_btn"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/info_rules"
                            app:layout_constraintBottom_toBottomOf="@id/back_btn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/back_btn" />

                        <androidx.legacy.widget.Space
                            android:id="@+id/space"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/_46sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/invitation_bg"
                            app:layout_constraintLeft_toLeftOf="@id/invitation_bg"
                            app:layout_constraintRight_toRightOf="@id/invitation_bg" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cardLay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/invitation_bg"
                            app:layout_constraintEnd_toEndOf="@+id/invitation_bg"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.750">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/card_bg_blue"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginStart="@dimen/_18sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/card"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/profile_img"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/card_amt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                app:layout_constraintEnd_toEndOf="@+id/cards"
                                app:layout_constraintStart_toStartOf="@+id/cards"
                                app:layout_constraintTop_toTopOf="@id/card_bg_blue" />

                            <TextView
                                android:id="@+id/cards"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_regular"
                                android:maxLines="1"
                                android:text="Cards"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toEndOf="@+id/profile_img"
                                app:layout_constraintTop_toBottomOf="@+id/card_amt" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/invite_frnds_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:background="@drawable/invite_frns_bg"
                            android:minHeight="@dimen/_165sdp"
                            app:layout_constraintTop_toBottomOf="@+id/space">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/diamonds_bg"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginHorizontal="@dimen/_50sdp"
                                android:background="@drawable/diamonds"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.001"
                                tools:layout_editor_absoluteX="1dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/invite_frnds_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_12sdp"
                                android:gravity="center"
                                android:text="@string/invite_friends_txt"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                app:layout_constraintTop_toBottomOf="@+id/diamonds_bg" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/my_invitation_rewards_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_16sdp"
                                android:gravity="center"
                                android:text="@string/my_invitation_rewards"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16ssp"
                                android:visibility="gone"
                                android:fontFamily="@font/lato_bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.001"
                                tools:layout_editor_absoluteX="1dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/my_rewards_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_12sdp"
                                android:drawablePadding="@dimen/_4sdp"
                                android:gravity="center"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_22ssp"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/my_invitation_rewards_txt" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/invite_frnds_btn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_44sdp"
                                android:layout_marginHorizontal="@dimen/_48sdp"
                                android:layout_marginVertical="@dimen/_12sdp"
                                android:background="@drawable/invite_frnds_btn_bg"
                                android:gravity="center"
                                android:text="@string/invite_friends_btn"
                                android:textAlignment="center"
                                android:textColor="@color/invite_frnds_color"
                                android:textSize="@dimen/_16ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/invite_frnds_txt" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1.0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
                app:layout_constraintVertical_bias="0.0">
                <RelativeLayout
                    android:id="@+id/monthly_rank_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow_rank_listing">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/monthly_rank_txt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center"
                        android:text="@string/monthly_rank"
                        android:textColor="#2F2182"
                        android:layout_marginTop="3dp"
                        android:textSize="@dimen/_16sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/monthly_rank_no_data_img"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_below="@+id/monthly_rank_txt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:gravity="center"
                        android:src="@drawable/no_record"
                        android:visibility="gone" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/monthly_rank_no_data_txt"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:gravity="center"
                        android:text="No Data"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="@dimen/_12sdp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:layout_below="@id/monthly_rank_no_data_img"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/monthly_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_below="@id/monthly_rank_txt"
                        tools:listitem="@layout/invitation_rewards_list_item" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>